{
    "extends": [
        "zyhou",
        "zyhou/react",
        "zyhou/jest",
        "plugin:mdx/recommended",
        "plugin:testing-library/react"
    ],
    "rules": {
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": ["Link"],
                "specialLink": ["hrefLeft", "hrefRight"],
                "aspects": ["invalidHref", "preferButton"]
            }
        ],
        "no-unused-vars": [2, { "ignoreRestSiblings": true, "varsIgnorePattern": "^_" }]
    }
}
