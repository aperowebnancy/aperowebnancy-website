{
    "extends": ["zyhou/presets/react", "plugin:mdx/recommended"],
    "env": {
        "jest": true
    },
    "rules": {
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": ["Link"],
                "specialLink": ["hrefLeft", "hrefRight"],
                "aspects": ["invalidHref", "preferButton"]
            }
        ],
        "no-unused-vars": [2, { "ignoreRestSiblings": true, "varsIgnorePattern": "^_" }]
    }
}
